<div class="container">
    <br>
    <h2 class="home__description text-center font-weight-bold">Create a survey</h2>
</div>


<!-- Work on Add -->


<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="surveyTextField">Survey Title</label>
                    <input type="text" class="form-control"
                    id="surveyTextField"
                    placeholder="Enter the Survey Title"
                    name="name" required>
                </div>

                <div class="form-group">
                    <form action="">
                        <label for="Ques_And_List">Question Type:</label>
                        <select id="Ques_And_List" name="Ques_And_List">
                          <option value="trueFalse">Single Text</option>
                          <option value="multiChoice">Multiple Choice </option>

                        </select>

                      </form>

                </div>

                <div class="form-group">
                    <label for="questionTextField">Question</label>
                    <input type="text" class="form-control"
                    id="questionTextField"
                    placeholder="Enter question"
                    name="question" required>
                </div>

