<div class="container">
    <% if(messages.length > 0) { %>
        <div class="alert alert-danger">
            <%= messages %>
        </div>
    <% } %>
    <div class="registerContents">
        
          <div class="registerForms">
              <div class="form-content">
                  <div class="signup-form">
                      <div class="title">Sign in to Please Let Us Know</div>
                      <form action="/login" method="post">
                          <div class="input-boxes">
                              <div>
                                  <input class="input-box" type="text" name="username" placeholder="Enter Username" required>
                              </div>
                              <div>
                                  <input class="input-box" type="password" name="password" placeholder="Enter Password" required>
                              </div>
                            <button class="signinBtn" onclick="">Sign In</button>
                              <div class="text sign-up-text"><a href="/register">or Sign up here</a></div>
                          </div>
                        
                      </form> 
                  </div>
              </div>
            </div>
            <div class="registerCover">
                <div class="front">
                  <img id="registerImg" src="/Assets/images/signin.png" alt="">
                </div>
              </div>
    </div>
</div>
